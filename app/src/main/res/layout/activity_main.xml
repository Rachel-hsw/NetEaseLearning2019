<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.rachel.neteaselearning2019.IrregularDrawView
        android:visibility="gone"
        android:id="@+id/view"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <com.rachel.neteaselearning2019.IrregularRegionView
        android:visibility="gone"
        android:id="@+id/region_view"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <com.rachel.neteaselearning2019.BigView
        android:visibility="gone"
        android:id="@+id/big_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/singe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="加载1 张图片"
        android:gravity="center"/>

    <Button
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="加载10张图片"
        android:gravity="center"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/scroll_line"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>